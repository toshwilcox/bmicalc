    MainScreen:


#BMICalculator:
<MainScreen>
    BoxLayout:
        orientation: "vertical"
        #size_hint: 1, 1

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, .2
            #pos_hint: {"top": 1, "x":1}
            canvas.before:
                Color:
                    rgb: 0, 1, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos


            MDRectangleFlatButton:
                text: "ft + in"
                group: "y"

            MDRectangleFlatButton:
                text: "cm"
                group: "y"

        BoxLayout:
            size_hint: 1, .2
        #    pos_hint: {"top": .8, "x":1}
            canvas.before:
                Color:
                    rgb: 1, 0, 1, 1
                Rectangle:
                    size: self.size
                    pos: self.pos


            MDLabel:
                text: "Height"

            MDTextField:
                #max_text_length: 4
                input_filter: "int"

        BoxLayout:
            size_hint: 1, .2
        #    pos_hint: {"top": .8, "x":1}
            canvas.before:
                Color:
                    rgb: 1, 1, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            MDLabel:
                text: "Weight"

            MDTextField:
                #max_text_length: 4
                input_filter: "int"

        BoxLayout:
            size_hint: 1, .2
        #    pos_hint: {"top": .8, "x":1}
            canvas.before:
                Color:
                    rgb: .5, 1, .5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos

            MDRaisedButton:
                text: "Caclulate BMI"
                on_press: root.metric_to_bmi(100, 90)


        BoxLayout:
